<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_account_config_taxe_professionnelle_inherit_form">
            <field name="name">view.account.config.taxe.professionnelle.form.inherit</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="model">res.config.settings</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]//t[position()=1]" position="inside">

                    <h2>Taxe professionnelle</h2>
                            <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16 mb16">
                                            <label for="tp_rapport_excel" class="col-md-3 o_light_label"/>
                                            <field name="tp_rapport_excel" class="oe_inline"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
